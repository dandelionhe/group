<div class="col-md-12">
  <h2 class="text-center">My Groups</h2>
  <table class="table table-hover">
      <thead>
        <tr>
          <td>Title</td>
          <td>Description</td>
          <td>Post count</td>
          <td>Last updated</td>

        </tr>
      </thead>
      <tbody>
<% @groups.each do |group| %>
          <tr>
            <td><%= group.title %></td>
            <td><%= group.description %></td>
            <td><%= group.posts.count %></td>
            <td><%= time_ago_in_words group.updated_at %></td>

          </tr>
<% end %>
      </tbody>
    </table>
</div>
